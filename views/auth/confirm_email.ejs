<div class="d-flex flex-column align-items-center justify-content-center" style="height: 100vh;">
    <h2 class="mb-5 w-100 text-left">Confirm Email</h2>

    <% if (sended) { %>
        <div class="alert alert-warning mb-3 w-100">
            <%= sended %>
        </div>
    <% } %>

    <form action="/auth/confirm-email" method="post" class="w-100">
        <div class="form-group mb-3">
            <label for="" class="mb-2">Email</label>
            <input type="text" name="email" placeholder="Email..." class="w-100 form-control">
        </div>
        <button class="btn btn-primary w-100">Submit</button>
    </form>
</div>