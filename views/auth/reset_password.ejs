<div class="d-flex flex-column align-items-center justify-content-center" style="height: 100vh;">
    <h2 class="mb-5 w-100 text-left">Reset Password</h2>

    <form action=<%= `/auth/reset-password/${token}` %> method="post" class="w-100">
        <div class="form-group mb-3">
            <label for="" class="mb-2">Password</label>
            <input type="password" name="password" placeholder="Password..." class="form-control w-100 mb-2">
            <% if (req.errors.password) { %>
                <div class="alert alert-danger">
                    <%= req.errors.password %>
                </div>
            <% } %>
        </div>

        <div class="form-group mb-3">
            <label for="" class="mb-2">Confirm password</label>
            <input type="password" name="confirm_password" placeholder="Confirm password..." class="form-control w-100 mb-2">
            <% if (req.errors.confirm_password) { %>
                <div class="alert alert-danger">
                    <%= req.errors.confirm_password %>
                </div>
            <% } %>
        </div>

        <button class="btn btn-primary w-100">Change</button>
    </form>
</div>