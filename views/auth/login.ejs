<h2 class="mb-5">Login Page</h2>

<% if (error) { %>
    <div class="alert alert-danger text-center">
        <%= error %>
    </div>
<% } %>

<% if (changePass) { %>
    <div class="alert alert-warning text-center">
        <%= changePass %>
    </div>
<% } %>
 
<form action="/auth/login" method="post">
    <div class="form-group mb-3">
        <label class="mb-2" for="">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email...">
    </div>

    <div class="form-group mb-3">
        <label class="mb-2" for="">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Passowrd...">
    </div>

    <button class="btn btn-primary w-100 mb-3">Login</button>
    <a href="/auth/google/callback" class="btn btn-danger w-100 mb-3">Login with Google</a>

    <a href="/auth/confirm-email" class="d-block text-end text-decoration-none">Forgot password</a>
</form>